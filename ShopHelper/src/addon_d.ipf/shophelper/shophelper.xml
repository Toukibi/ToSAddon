<?xml version="1.0" encoding="UTF-8"?>
<uiframe name="shophelper" x="0" y="0" width="650" height="640" create="open">
  <frame fasthide="true" layout_gravity="center center" margin="0 0 0 0"/>
  <skin frameskin=" "/>
  <input hittest="true" movable="true" moveintitlebar="false" hittestframe="true"/>
  <layer layerlevel="99"/>
  <draw drawframe="true" drawtitlebarframe="false" drawtitlebar="false"/>
  <option closebutton="false" hideable="false" useimageitem="true"/>
  <sound opensound="sys_popup_open_1" closesound="character_item_window_close"/>
  <script OpenScp="TOUKIBI_SHOPHELPER_OPEN_SETTING" CloseScp="TOUKIBI_SHOPHELPER_CLOSE_SETTING"/>
  <controls>
    <groupbox name="pnlMain" rect="0 0 650 610" margin="0 30 0 0" layout_gravity="center top" draw="true" hittestbox="false" resizebyparent="false" resizebyresolution="false" savescroll="true" scrollbar="false" skin="test_frame_low"/>
    <groupbox name="pipwin_top" rect="0 0 650 60" margin="0 0 0 0" layout_gravity="center top" draw="true" hittestbox="false" resizebyparent="false" scrollbar="false" skin="test_frame_top"/>
    <richtext name="title" rect="0 0 200 80" margin="0 16 0 0" layout_gravity="center top" caption="{@st43}Shop Helperの設定{/}" textalign="left top" hittest="false"/>
    <button name="close" rect="0 0 44 44" margin="0 19 28 0" layout_gravity="right top" image="testclose_button"
		LBtnUpScp="ui.CloseFrame(&apos;shophelper&apos;)" texttooltip="{@st59}閉じる / Close{/}"
		clicksound="button_click_big" oversound="button_over" MouseOffAnim="btn_mouseoff" MouseOnAnim="btn_mouseover"/>

    <tab name="ShopHelperSettingTab" parent="pnlMain" rect="0 0 600 40" layout_gravity="left top" LBtnDownScp="TOUKIBI_SHOPHELPER_TAB_LMOUSEDOWN" MouseOffAnim="btn_mouseoff" MouseOnAnim="btn_mouseover" clicksound="inven_arrange" fixwidth="false" itemspc="0" oversound="button_cursor_over_2" skin="tab2" margin="20 35 0 0"/>
    <tabitem name="TabPage1" parent="ShopHelperSettingTab" caption="{@st66b}基本設定{/}" width="180" layout_gravity="left top"/>
    <tabitem name="TabPage2" parent="ShopHelperSettingTab" caption="{@st66b}平均価格設定{/}" width="180" layout_gravity="left top"/>

    <groupbox name="pnlLang" parent="pnlMain" rect="0 0 640 65" margin="0 80 0 0" layout_gravity="center top" draw="false" hittestbox="false" resizebyparent="false" resizebyresolution="true" scrollbar="false"/>
    <richtext name="lang_title" parent="pnlLang" rect="0 0 120 24" margin="20 0 0 0" layout_gravity="left top" caption="{@st43}言語 (Language){/}"/>
    <radiobutton name="lang_jp" parent="pnlLang" rect="0 0 200 24" margin="40 35 0 0" layout_gravity="left top" ConfigName="ControlMode" LBtnDownScp="TOUKIBI_SHOPHELPER_CHANGE_LANGMODE" caption="{@st66b}日本語{/}" clicksound="button_click_big" group="controlType" oversound="button_over"/>
    <radiobutton name="lang_en" parent="pnlLang" rect="0 0 200 24" margin="200 35 0 0" layout_gravity="left top" ConfigName="ControlMode" LBtnDownScp="TOUKIBI_SHOPHELPER_CHANGE_LANGMODE" caption="{@st66b}English{/}" clicksound="button_click_big" group="controlType" oversound="button_over"/>

    <groupbox name="pnlOption" parent="pnlMain" rect="0 0 640 320" margin="0 145 0 0" layout_gravity="center top" draw="false" hittestbox="false" resizebyparent="false" resizebyresolution="true" scrollbar="false"/>
    <richtext name="option_title" parent="pnlOption" rect="0 0 120 24" margin="20 0 0 0" layout_gravity="left top" caption="{@st43}動作設定{/}"/>
    <checkbox name="ShowMessageLog" parent="pnlOption" rect="0 0 120 30" margin="40 40 0 0" layout_gravity="left top" ConfigName="ShowMessageLog" caption="{@st66b}ログを表示する{/}" clicksound="button_click_big" oversound="button_over"/>
    <checkbox name="ShowMsgBoxOnBuffShop" parent="pnlOption" rect="0 0 120 30" margin="40 70 0 0" layout_gravity="left top" ConfigName="ShowMsgBoxOnBuffShop" caption="{@st66b}バフ購入時の確認メッセージをスキップする{/}" clicksound="button_click_big" oversound="button_over"/>
    <checkbox name="AddInfoToBaloon" parent="pnlOption" rect="0 0 120 30" margin="40 100 0 0" layout_gravity="left top" ConfigName="AddInfoToBaloon" caption="{@st66b}露店の看板に追記する{/}" clicksound="button_click_big" oversound="button_over"/>
    <checkbox name="EnableBaloonRightClick" parent="pnlOption" rect="0 0 120 30" margin="40 130 0 0" layout_gravity="left top" ConfigName="EnableBaloonRightClick" caption="{@st66b}露店の看板の右クリックを有効にする{/}" clicksound="button_click_big" oversound="button_over"/>

    <checkbox name="UpdateAverage" parent="pnlOption" rect="0 0 120 30" margin="40 160 0 0" layout_gravity="left top" ConfigName="UpdateAverage" caption="{@st66b}平均値を更新する{/}" clicksound="button_click_big" oversound="button_over"/>
    <richtext name="AverageNCount_text" parent="pnlOption" rect="0 0 120 24" margin="100 196 0 0" layout_gravity="left top" format="{@st66b}%s：(%s%s1){/}" param1="opCaption" param2="opValue" param3="opUnit"/>
    <richtext name="RecalcInterval_text" parent="pnlOption" rect="0 0 120 24" margin="100 246 0 0" layout_gravity="left top" format="{@st66b}%s：(%s%s){/}" param1="opCaption" param2="opValue" param3="opUnit"/>
    <slidebar name="AverageNCount" parent="pnlOption" rect="0 0 300 20" margin="100 215 0 0" layout_gravity="left top" SlideScp="TOUKIBI_SHOPHELPER_SLIDER_CHANGED" clicksound="button_click_big_2" maxlevel="20" minlevel="1" oversound="button_over" skin="slidebar"/>
    <slidebar name="RecalcInterval" parent="pnlOption" rect="0 0 300 20" margin="100 265 0 0" layout_gravity="left top" SlideScp="TOUKIBI_SHOPHELPER_SLIDER_CHANGED" clicksound="button_click_big_2" maxlevel="12" minlevel="1" oversound="button_over" skin="slidebar"/>
    <checkbox name="NoUpdateIfFarther" parent="pnlOption" rect="0 0 120 30" margin="100 300 0 0" layout_gravity="left top" ConfigName="NoUpdateIfFarther" caption="{@st66b}平均値からあまりに離れている場合は更新しない{/}" clicksound="button_click_big" oversound="button_over"/>

    <groupbox name="pnlPrice" parent="pnlMain" rect="0 0 640 440" margin="-5 80 0 0" layout_gravity="center top" draw="false" hittestbox="false" resizebyparent="false" resizebyresolution="false" savescroll="true" scrollbar="true" skin="pipwin_low"/>
    <!--コードによりここへ価格設定コントロールが入ります-->

    <button name="btn_cencel" parent="pnlMain" rect="10 10 140 55" margin=" 80 0 0 30" layout_gravity="center bottom" LBtnUpScp="ui.CloseFrame(&apos;shophelper&apos;)" caption="{@st42}閉じる" clicksound="button_click_3" oversound="button_cursor_over_2" skin="test_gray_button"/>
    <button name="btn_excute" parent="pnlMain" rect="10 10 140 55" margin="-90 0 0 30" layout_gravity="center bottom" LBtnUpScp="TOUKIBI_SHOPHELPER_EXEC_SETTING" caption="{@st42}保存" clicksound="button_click_3" oversound="button_cursor_over_2" skin="test_red_button"/>


  </controls>
</uiframe>
