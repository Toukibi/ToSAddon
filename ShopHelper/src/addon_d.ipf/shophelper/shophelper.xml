		<radiobutton name="lang_en" parent="pnlLang" rect="0 0 200 24" margin="250 35 0 0" layout_gravity="left top" ConfigName="ControlMode" LBtnDownScp="TOUKIBI_SHOPHELPER_CHANGE_LANGMODE" caption="{@st66b}English{/}" clicksound="button_click_big" group="controlType" oversound="button_over"/>
